<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.github.nibavs.bookcatalog.controller.AddBookController" hgap="15" vgap="10" alignment="CENTER">
    <Label fx:id="modalTitleLabel">New book</Label>
    <TextField fx:id="bookTitleField" promptText="Title" GridPane.rowIndex="1" prefWidth="220"/>
    <TextField fx:id="bookAuthorField" promptText="Author" GridPane.rowIndex="2" />
    <TextField fx:id="bookYearField" promptText="Year" GridPane.rowIndex="3" />
    <TextField fx:id="bookPagesField" promptText="Pages" GridPane.rowIndex="4" />
    <Label fx:id="bookStatusLabel" GridPane.rowIndex="5">Book status: </Label>
    <ChoiceBox fx:id="bookStatusChoiceBox" GridPane.rowIndex="5" GridPane.halignment="RIGHT" prefWidth="130"/>
    <Label fx:id="errorOutputLabel" GridPane.rowIndex="6"/>

    <Button text="Add" onAction="#onConfirmButtonClicked" GridPane.rowIndex="8" GridPane.halignment="RIGHT" prefWidth="60"/>
    <Button text="Cancel" onAction="#onCancelButtonClicked" GridPane.rowIndex="8" prefWidth="60"/>

<!--    <Label fx:id="errorOutput" GridPane.rowIndex="5"/>-->
</GridPane>
